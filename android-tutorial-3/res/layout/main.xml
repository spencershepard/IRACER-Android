<?xml version="1.0" encoding="utf-8"?>
<!-- Use DrawerLayout as root container for activity -->
<org.freedesktop.gstreamer.tutorials.tutorial_3.CustomDrawer
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.AppCompat.NoActionBar"
    android:fitsSystemWindows="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <org.freedesktop.gstreamer.tutorials.tutorial_3.GStreamerSurfaceView
            android:id="@+id/surface_video"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal" />

        <View
            android:id="@+id/video_filter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.1"
            android:background="#6600ff" />


        <View
            android:id="@+id/top_bar_background"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="top"
            android:background="@android:color/black" />

        <LinearLayout
            android:id="@+id/left_top_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|left|center_vertical"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:padding="4dp"
                android:tint="@android:color/holo_orange_dark"
                app:srcCompat="@drawable/user" />

            <TextView
                android:id="@+id/player_name_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3dp"
                android:layout_weight="1"
                android:fontFamily="monospace"
                android:text="Spencer"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="25dp"
                android:layout_weight="1"
                android:padding="2dp"
                android:tint="@android:color/holo_orange_dark"
                app:srcCompat="@drawable/games" />

            <TextView
                android:id="@+id/game_status_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3dp"
                android:layout_weight="1"
                android:fontFamily="monospace"
                android:text="Free Roam"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/center_top_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:padding="2dp"
                android:tint="@android:color/holo_orange_dark"
                app:srcCompat="@drawable/sun" />

            <SeekBar
                android:id="@+id/BrightnessSeekBar"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:thumbTint="@android:color/holo_orange_dark" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:padding="2dp"
                android:tint="@android:color/holo_orange_dark"
                app:srcCompat="@android:drawable/presence_video_away" />

            <SeekBar
                android:id="@+id/bitrateSeekBar"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_weight="1"
                android:thumbTint="@android:color/holo_orange_dark" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/right_top_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:layout_marginRight="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:tint="@android:color/holo_orange_dark"
                app:srcCompat="@drawable/wifi_icon" />

            <TextView
                android:id="@+id/link_quality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3dp"
                android:layout_weight="1"
                android:fontFamily="monospace"
                android:text="0%"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="25dp"
                android:layout_weight="1"
                android:tint="@android:color/holo_orange_dark"
                app:srcCompat="@drawable/full_battery" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3dp"
                android:layout_weight="1"
                android:fontFamily="monospace"
                android:text="75%"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="12sp" />

        </LinearLayout>


        <FrameLayout
            android:id="@+id/steering_wheel_frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:layout_marginLeft="20dp">

            <ImageView
                android:id="@+id/steering_wheel_image"
                android:layout_width="240dp"
                android:layout_height="240dp"
                android:layout_gravity="bottom|center_horizontal"
                android:alpha="0.7"
                android:translationY="100dp"
                app:srcCompat="@drawable/iracer_wheel" />

            <SeekBar
                android:id="@+id/steering_seek"
                android:layout_width="275dp"
                android:layout_height="232dp"
                android:layout_gravity="bottom|left"
                android:alpha="0.0" />
        </FrameLayout>

        <View
            android:id="@+id/color_view"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_gravity="bottom"
            android:background="@android:color/black" />

        <TextView
            android:id="@+id/socket_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:text="Socket:"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/motor_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right|center_horizontal"
            android:layout_marginRight="20dp"
            android:text="Motor output: 0"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/servo_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left|center_horizontal"
            android:layout_marginLeft="20dp"
            android:text="Servo output: 0"
            android:textSize="8sp" />

        <ProgressBar
            android:id="@+id/motor_progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:alpha="0.6"
            android:progressDrawable="@drawable/speedbar"
            android:visibility="gone" />

        <FrameLayout
            android:id="@+id/speedometer"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="top|right|center_vertical|center_horizontal"
            android:visibility="gone">

            <ProgressBar
                android:id="@+id/motor_progress_bar_old"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:progress="0"
                android:progressDrawable="@drawable/circular"
                android:visibility="invisible" />

        </FrameLayout>

        <View
            android:id="@+id/view"
            android:layout_width="100dp"
            android:layout_height="51dp"
            android:background="@drawable/speedometer_background" />

        <TextView
            android:id="@+id/speedometer_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="25dp"
            android:layout_marginRight="15dp"
            android:alpha=".5"
            android:fontFamily="monospace"
            android:text="0%"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="22sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="34dp"
            android:layout_marginBottom="-15dp"
            android:orientation="vertical"
            android:rotation="-90">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:alpha="0.4"
                    android:fontFamily="monospace"
                    android:paddingLeft="45px"
                    android:paddingBottom="10px"
                    android:text="Reverse"
                    android:textColor="@android:color/holo_orange_dark"
                    android:textSize="18sp" />

                <SeekBar
                    android:id="@+id/brake_seek"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:alpha="0.5"
                    android:background="@drawable/brake_pedal"
                    android:padding="0dip"
                    android:progressDrawable="@drawable/brake_pedal"
                    android:thumb="@android:color/transparent" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:alpha="0.4"
                    android:fontFamily="monospace"
                    android:paddingLeft="45px"
                    android:paddingBottom="10px"
                    android:text="Forward"
                    android:textColor="@android:color/holo_orange_dark"
                    android:textSize="18sp" />

                <SeekBar
                    android:id="@+id/gas_seek"
                    android:layout_width="200dp"
                    android:layout_height="120dp"
                    android:alpha="0.5"
                    android:background="@drawable/gas_pedal"
                    android:padding="0dp"
                    android:progressDrawable="@drawable/gas_pedal"
                    android:thumb="@android:color/transparent" />

            </FrameLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/textview_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dip"
            android:gravity="center_horizontal"
            android:padding="50dp" />

        <LinearLayout
            android:id="@+id/development_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:visibility="invisible">

            <Button
                android:id="@+id/start_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Shutdown" />

            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Button1" />

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Button2" />

            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Button3" />

            <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Button4" />

            <Button
                android:id="@+id/button5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Button5" />

            <Button
                android:id="@+id/button6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Button6" />

        </LinearLayout>

        <FrameLayout
            android:id="@+id/GameLayer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/game_display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|left|center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:fontFamily="@font/archivo_black"
                android:textAllCaps="false"
                android:textColor="#ffea00"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/game_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|left|center_vertical"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="60dp"
                android:fontFamily="serif-monospace"
                android:singleLine="false"
                android:textColor="#FFFFEA00"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/game_alert_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/archivo_black"
                android:textAlignment="center"
                android:textColor="#FFFFEA00"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/elapsed_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center_horizontal"
                android:layout_marginTop="15dp"
                android:fontFamily="serif-monospace"
                android:text="1:32"
                android:textColor="#FFFFEA00"
                android:textSize="18sp"
                android:visibility="invisible" />

            <Button
                android:id="@+id/free_roam"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_vertical|center_horizontal"
                android:layout_marginLeft="7dp"
                android:layout_marginBottom="15dp"
                android:background="@android:color/holo_orange_dark"
                android:padding="5dp"
                android:text="Exit"
                android:textColor="@android:color/white"
                android:visibility="invisible" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center_vertical|center_horizontal"
                android:layout_marginTop="60dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/ready_button"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@android:color/holo_orange_dark"
                    android:text="Ready"
                    android:textColor="@android:color/white"
                    android:visibility="invisible" />

                <Button
                    android:id="@+id/leave_button"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@android:color/holo_red_dark"
                    android:padding="5dp"
                    android:text="Leave Game"
                    android:textColor="@android:color/white"
                    android:visibility="invisible" />
            </LinearLayout>


        </FrameLayout>


        <ImageView
            android:id="@+id/game_item_box"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="70dp"
            android:padding="15dp" />

        <FrameLayout
            android:id="@+id/black_overlay_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/black"
            android:visibility="invisible">

        </FrameLayout>

        <FrameLayout
            android:id="@+id/settings_view"
            android:layout_width="425dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_marginLeft="250dp"
            android:paddingTop="10dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">


        </FrameLayout>


    </FrameLayout>


    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/menu_header"
        app:itemBackground="@drawable/drawer_item_background"
        app:menu="@menu/drawer_view" />



</org.freedesktop.gstreamer.tutorials.tutorial_3.CustomDrawer>
